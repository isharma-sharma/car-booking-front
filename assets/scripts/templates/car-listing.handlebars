
{{#each cars as |car|}}
<div class="bleh">
<!--we are using data id and not id -->
<ul id='tog' data-id="{{car.id}}">
  <li><small>carId:{{car.id}}</small></li>
  <li><small>Model:{{car.model}}</small></li>
  <li><small>Color-of-car:{{car.color}}</small></li>
  <li><small>licence-plate-no:{{car.lcp}}</small></li>
  <li><small>Repair-needed:<span class = "rep">{{car.repair}}</span></small></li>
  <li><form class="updetail">
      <div class="form-group">
        <label for="rpnd">Change-Needed:</label>
        <input type="text" name="car[repair]" class="form-control" id="rep">
      </div>
          <button class ="update" type="submit" class="btn btn-info btn-block">Submit</button>
  </form></li>
  <label for="rem">If you are satified by the Service you can Remove your Car</label>
  <li><button class="removebtn" class="btn btn-primary btn-block">Remove-Car</button></li>

</ul>
</div>
{{/each}}
